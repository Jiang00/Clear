<resources>

     <!--Base application theme.-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMemory</item>
        <item name="colorPrimaryDark">@color/colorMemoryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="checkboxTheme">
        <item name="android:colorControlNormal">@color/colorMemory</item>
        <item name="android:colorControlActivated">@color/colorMemoryDark</item>
    </style>

    <style name="fragmentTextView">
        <item name="android:padding">20dp</item>
        <item name="android:gravity">bottom|right</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
